---
import Layout from "$layouts/Layout.astro";
import Form from "$components/LoginForm.svelte";

const session = await Astro.locals.auth.validate();
if (session) return Astro.redirect("/", 302);
---

<Layout title="Login">
  <h1>Login</h1>
  <Form client:load />
  <a href="/auth/register">Register</a>
</Layout>
