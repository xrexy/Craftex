{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "noUncheckedIndexedAccess": true,

    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"],
      "@routers/*": ["src/server/router/routers/*"],
      "@db": ["src/server/db/client.ts"],

      "@pages/*": ["src/pages/*"],
      "@api/*": ["src/pages/api/*"],

      "@utils/*": ["src/utils/*"],

      "@types/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"],

      "@env/server": ["src/env/server.mjs"],
      "@env/client": ["src/env/client.mjs"],
      "@env/schema": ["src/env/schema.mjs"],

      "@context": ["src/server/router/context.ts"],
      "@protected-router": ["src/server/router/protected-router.ts"],
      
      "@trpc": ["src/utils/trpc.ts"],
    }
  },
  "include": [
    "next-env.d.ts",
    "next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
